<Page x:Class="Interpol.Assets.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Interpol.Assets.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация | Регистрация">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Label Content="Логин:"/>
                <Label Content="Пароль:"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBox Name="TBoxLogin" Style="{StaticResource InfoBox}"/>
                <PasswordBox Name="PBoxPassword" Style="{StaticResource PassBox}"/>
            </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Button Content="ВОЙТИ" Name="BtnLogin" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="10" Click="BtnLogin_Click"/>
                <Button Content="РЕГИСТРАЦИЯ" Name="BtnReg" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="10" Click="BtnReg_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
